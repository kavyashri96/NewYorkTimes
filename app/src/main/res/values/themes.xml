<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewYorkTimes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NewYorkTimes" />

    <style name="NewYorkTimes.Text" parent="NewYorkTimes">
        <item name="android:textColor">#686666</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="NewYorkTimes.TitleText" parent="NewYorkTimes">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@id/blocking</item>
        <item name="lineSpacing">1.4sp</item>
    </style>

    <style name="NewYorkTimes.Small" parent="NewYorkTimes">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@id/normal</item>
        <item name="lineSpacing">1.4sp</item>
    </style>

    <style name="NewYorkTimes.Error" parent="NewYorkTimes">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#090909</item>
        <item name="android:textAppearance">@id/normal</item>
        <item name="lineSpacing">1.4sp</item>
    </style>
</resources>